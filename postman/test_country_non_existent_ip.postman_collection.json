					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"General status code is 500\", function () {\r",
							"  pm.response.to.have.status(500);\r",
							"});\r",
							"pm.test(\"Response object has all error keys\", function () {\r",
							"  pm.expect(pm.response.json()).to.have.all.keys('statusCode','transactionTimestamp','error');\r",
							"});\r",
							"pm.test(\"Response status code is 500\", function () {\r",
							"  pm.expect(pm.response.json().statusCode).to.eql(500);\r",
							"});\r",
							"pm.test(\"Error code and message are for invalid IP\", function () {\r",
							"  pm.expect(pm.response.json().error.code).to.eql(\"1002\");\r",
							"  pm.expect(pm.response.json().error.message).include(\"Not valid IP:\")\r",
							"});\r",
							"pm.test(\"Exception type confirm a controlled exception\", function () {\r",
							"  pm.expect(pm.response.json().error.exception).include(\"RestException\")\r",
							"});\r",
							""
						],
